{
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": [
      "ESNext",
      "dom"
    ],
    "types": ["node", "jest"],
    "outDir": "lib", 
    "removeComments": true, 
    "target": "ES6", 
    "baseUrl": "./", 
    "esModuleInterop": true, 
    "moduleResolution": "node", 
    "paths": {
      "@components/*": ["src/components/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@pages/*": ["src/pages/*"],
    }, 
    "sourceMap": true, 
    "sourceRoot": "/", 
    "alwaysStrict": true, 
    "allowUnreachableCode": false, 
    "noImplicitAny": true, 
    "strictNullChecks": true, 
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true, 
    "noUnusedLocals": true, 
    "noUnusedParameters": true 
  },
  "include": ["./**/*.ts", "./**/*.tsx", "src/components/header/index.spec.js", "src/utils/test-utilities.js", "src/utils/test-utilities.js", "src/components/carousel/index.spec.js"],
}
